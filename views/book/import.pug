extends ../layout

block content

    div(class="container")
        if success
          p(class="alert alert-success") #{success}
        if error
            p(class="alert alert-danger") #{error}
        for error in errors
            p(class="alert alert-danger") #{error.message}

        h2(class="page-header") JSON Import
        form(method="post" enctype="multipart/form-data" class="list-group-item row_aside clearfix")
            label(class="form-header header-neutral") Import

            div(class="form-group")
                label(for="file") File
                input(type="file" name="file" id="file")

            input(type="submit" class="btn btn-default pull-right" value="Import")